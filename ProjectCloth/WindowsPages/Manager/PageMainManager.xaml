<Page x:Class="ProjectCloth.WindowsPages.Manager.PageMainManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectCloth.WindowsPages.Manager"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PageMainManager">

    <Grid>

        <StackPanel Style="{StaticResource StpCenter}">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">

                <Button Style="{StaticResource BtnDefault}" Content="Заказы" Click="Button_Click"/>

            </StackPanel>

        </StackPanel>
        
        <Button Name="Btn_Close" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 10 10" Content="Закрыть" Click="Btn_Close_Click"/>

    </Grid>

</Page>
